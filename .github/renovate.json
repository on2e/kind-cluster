{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff",
    "helpers:pinGitHubActionDigests"
  ],
  "baseBranchPatterns": ["main"],
  "semanticCommits": "enabled",
  "prCreation": "immediate",
  "automergeType": "pr",
  "platformAutomerge": true,
  "rebaseWhen": "behind-base-branch",
  "ignoreTests": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update KIND node image in KIND_NODE_IMAGE file",
      "managerFilePatterns": ["/^KIND_NODE_IMAGE$/"],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "matchStrings": [
        "(?<depName>kindest/node):(?<currentValue>v\\d+\\.\\d+\\.\\d+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ]
    },
    {
      "customType": "regex",
      "description": "Update raw GitHub URLs using tags in kustomizations",
      "managerFilePatterns": ["/(^|/)kustomization\\.ya?ml$/"],
      "datasourceTemplate": "github-tags",
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/(?<depName>[^/]+/[^/]+)/(?<currentValue>[^/]+)"
      ]
    },
    {
      "customType": "regex",
      "description": "Update `*_VERSION` variables (case insensitive) in GitHub Actions workflows",
      "managerFilePatterns": ["/^\\.github/workflows/[^/]+\\.ya?ml$/"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: packageName=(?<packageName>.+?))?(?: versioning=(?<versioning>.+?))?(?: extractVersion=(?<extractVersion>.+?))?\\s+[a-zA-Z_][\\w]*?_(?i:VERSION)\\s*:\\s+['\"]?(?<currentValue>.+?)['\"]?\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Pin digests for KIND node images",
      "matchPackageNames": ["/^kindest/node$/"],
      "matchDatasources": ["docker"],
      "pinDigests": true
    },
    {
      "description": "Configure ingress-nginx dependencies",
      "matchPackageNames": ["/^kubernetes/ingress-nginx$/"],
      "matchDatasources": ["github-tags"],
      "versioning": "regex:^controller-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "separateMajorMinor": false,
      "groupName": "ingress-nginx"
    },
    {
      "description": "Configure postgresql dependencies",
      "matchPackageNames": ["/^postgres$/"],
      "matchDatasources": ["docker"],
      "separateMajorMinor": false,
      "groupName": "postgresql"
    }
  ]
}
