{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff",
    "helpers:pinGitHubActionDigests"
  ],
  "prCreation": "immediate",
  "automergeType": "pr",
  "platformAutomerge": true,
  "rebaseWhen": "behind-base-branch",
  "ignoreTests": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update KIND version in KIND_VERSION file",
      "managerFilePatterns": ["/^KIND_VERSION$/"],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "kubernetes-sigs/kind",
      "versioningTemplate": "semver",
      "matchStrings": ["(?<currentValue>v\\d+\\.\\d+\\.\\d+)"]
    },
    {
      "customType": "regex",
      "description": "Update KIND node image in KIND_NODE_IMAGE file",
      "managerFilePatterns": ["/^KIND_NODE_IMAGE$/"],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "matchStrings": [
        "(?<depName>kindest/node):(?<currentValue>v\\d+\\.\\d+\\.\\d+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ]
    },
    {
      "customType": "regex",
      "description": "Update raw GitHub URLs using tags in kustomizations",
      "managerFilePatterns": ["/(^|/)kustomization\\.ya?ml$/"],
      "datasourceTemplate": "github-tags",
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/(?<depName>[^/]+/[^/]+)/(?<currentValue>[^/]+)"
      ]
    },
    {
      "customType": "regex",
      "description": "Update `*_VERSION: <version>` variables in GitHub Actions workflows",
      "managerFilePatterns": ["/^\\.github/workflows/[^/]+\\.ya?ml$/"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?)(?: depName=(?<depName>.+?))?(?: packageName=(?<packageName>.+?))?(?: versioning=(?<versioning>.+?))?(?: extractVersion=(?<extractVersion>.+?))?\\s.+?_VERSION\\s*:\\s+(?<currentValue>.+?)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Pin digests for KIND node images",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["kindest/node"],
      "pinDigests": true
    },
    {
      "description": "Update kubernetes/ingress-nginx Kustomize dependencies with non-SemVer tags",
      "matchFileNames": ["deployments/ingress-nginx/kustomization.yaml"],
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["kubernetes/ingress-nginx"],
      "versioning": "regex:^controller-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ]
}
